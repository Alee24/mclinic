# M-Clinic Production Environment Variables
# Copy this file to apps/api/.env and fill in your values

# Database Configuration
DATABASE_URL="mysql://m-cl-app:Mclinic@App2023?@localhost:3306/mclinic"
DB_HOST=localhost
DB_PORT=3306
DB_USER=m-cl-app
DB_PASSWORD=Mclinic@App2023?
DB_NAME=mclinic

# Application URLs
API_URL=https://portal.mclinic.co.ke/api
FRONTEND_URL=https://portal.mclinic.co.ke
PORT=3434

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRATION=7d

# Email Configuration (Nodemailer)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-specific-password
EMAIL_FROM=noreply@mclinic.co.ke

# M-Pesa Configuration
MPESA_CONSUMER_KEY=your-consumer-key
MPESA_CONSUMER_SECRET=your-consumer-secret
MPESA_SHORTCODE=your-shortcode
MPESA_PASSKEY=your-passkey
MPESA_CALLBACK_URL=https://portal.mclinic.co.ke/api/mpesa/callback
MPESA_ENVIRONMENT=sandbox

# File Upload
MAX_FILE_SIZE=10485760

# Session
SESSION_SECRET=your-session-secret-change-this
